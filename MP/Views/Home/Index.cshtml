@{
    ViewBag.Title = "Home Page";
}
<div class="row">&nbsp;</div>
<div class="row">
<div class="col-md-3">
    </div>
    <div class="col-md-6">
        <form class="form-horizontal" role="form" id="loginForm">
            <div class="form-group">
                <label for="username" class="col-sm-2 control-label">Tên đăng nhập</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="username" name="username" placeholder="Tên đăng nhập">
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-2 control-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Mật khẩu">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="button" class="btn btn-default" id="submitLogin">Đăng nhập</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-3">
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#submitLogin").on("click", function() {
            $.post('/Home/Login', $('form').serialize()).done(function (result) {
                if (result) {
                    getPassenger();
                    $('#tripContentModal').modal("hide");
                } else {
                    $('#tripContentModal').modal("show");
                }
            });
        });
    });
</script>
@using MP.Model.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a href="../" class="navbar-brand">Minh Phán</a>
            </div>
            <nav class="collapse navbar-collapse" role="navigation">
                <ul class="nav navbar-nav">
                    <li class="@(Request.Params["tripname"] != null && Request.Params["tripname"].ToUpper() == TripName.MA.ToString() ? "active" : "")">
                        <a href="@Url.Action("TripContent", "Home", new { tripname = "ma" })">Mỹ An - Sài Gòn</a>
                    </li>
                    <li class="@(Request.Params["tripname"] != null && Request.Params["tripname"].ToUpper() == TripName.SG.ToString() ? "active" : "")">
                        <a href="@Url.Action("TripContent", "Home", new { tripname = "sg" })">Sài Gòn - Mỹ An</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Troy Lee</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jspdf")
    @RenderSection("scripts", required: false)
</body>
</html>
